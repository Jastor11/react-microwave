{
  "name": "react-microwave",
  "version": "0.0.1",
  "description": "A testing framework designed entirely for executing React application specs directly in the browser.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "private": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup --env.NODE_ENV production --sourcemap --dts",
    "dev": "tsup --watch --env.NODE_ENV development --sourcemap --dts",
    "lint": "eslint . --ext .ts --ext .tsx --ext .js --ignore-pattern dist",
    "clean:modules": "pnpm exec rimraf node_modules",
    "clean:build": "pnpm exec rimraf dist",
    "clean:all": "pnpm clean:build && pnpm clean:modules",
    "publish:dry-run": "pnpm publish --dry-run",
    "prepare": "pnpm clean:build && pnpm build",
    "packlist": "npx npm-packlist"
  },
  "dependencies": {
    "dequal": "^2.0.3",
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/eslint-parser": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@types/diff": "^5.0.2",
    "@types/node": "latest",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jest": "^27.1.6",
    "rimraf": "^3.0.2",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "tsx": "latest",
    "tsup": "latest",
    "typescript": "latest"
  },
  "author": {
    "name": "Jeff Astor",
    "email": "jeff@astor.io"
  },
  "publishConfig": {
    "access": "public"
  },
  "// old scripts": {
    "build": "tsup --env.NODE_ENV production --sourcemap --dts",
    "dev": "tsup --watch --env.NODE_ENV development --sourcemap --dts",
    "lint": "eslint . --ext .ts --ext .tsx --ext .js --ignore-pattern dist",
    "test": "jest test --verbose --detectOpenHandles",
    "clean:modules": "rm -rf node_modules",
    "clean:build": "rm -rf dist",
    "clean:all": "npm run clean:build && npm run clean:modules",
    "publish:dry-run": "npm publish --dry-run",
    "prepare": "npm run clean:build && npm run build",
    "packlist": "npx npm-packlist"
  },
  "// old devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@types/diff": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "ts-jest": "^28.0.2",
    "tsup": "latest",
    "typescript": "latest"
  }
}
